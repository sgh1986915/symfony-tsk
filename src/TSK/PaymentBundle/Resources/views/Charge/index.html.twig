<h1>Charge list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Created_date</th>
            <th>Misc</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('charge_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.amount }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.createddate %}{{ entity.createddate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.misc }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('charge_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('charge_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('charge_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
